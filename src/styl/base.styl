*
  box-sizing border-box

html
  font-size unit($baseFontSize, 'px')

  @media screen and (max-width: 768px)
    font-size 14.5px

  @media screen and (max-width: 480px)
    font-size 13px

body
  font-size inherit

  &.noscroll
    overflow hidden

    &::after
      content ' '
      opacity 1
      z-index 9

a
  &, &:focus, &:hover, &:active
    text-decoration none

#page
  margin 0
  overflow hidden
  padding 0

// LOADERS //
.custom-loader
  display none
  text-align center
  width 100%

  .ball-pulse-sync
    div
      background white

.button-wrapper.disabled,
button[type="submit"][disabled]
  display none

  & + .custom-loader
    &:not(.vertical-center)
      display block

    &.vertical-center
      display flex
      height 100%
// END LOADERS //

// FORMS //
label.error
  color $errorColor
  display block
  padding-top 0.3em

.form-message
  i, span
    display inline-block

  span
    margin-left 0.5em

  &.error
    color $errorColor

  &.success
    color $successColor

  &.success, &.error
    margin-top 1em

input, textarea, button, select
  font-family inherit

  &, &:hover, &:active &:focus
    box-shadow none
    outline none

textarea
  resize none
// END FORMS //

.show-desktop
  display block
  
.hide-desktop
  display none

.whatsappClick
  align-items flex-end
  bottom 20px
  display flex
  flex-direction column
  right 20px
  position fixed
  z-index 100

  &:hover
    .hoverText
      opacity 1
      transition 0.3s

  .hoverText
    color #66b245
    font-family 'OpenSans'
    font-size remify(15px)
    font-weight 600
    letter-spacing 2.2px
    margin-bottom 10px
    opacity 0
    // position absolute
    transition 0.3s

  img
    height 50px
    width 48.83px

@import 'partials/navbar'

@import 'partials/footer'

@media screen and (max-width 780px)
  .show-mobile
    display block
    
  .hide-mobile
    display none