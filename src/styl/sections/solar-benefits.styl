    background-position center
    height 720px
    margin-top -120px
    position relative
    padding 110px 0px 0px 50px

  .generate-title
    display none

  .generate-title-mobile
    color #fff
    display block
    font-size remify(24px)
    margin 0px

  .generate-title-underline
    width 60px

  .generate-description
    font-size remify(15px)
    padding-right 34px
    width 100%
    
  .solar-benefits-how
    position relative
    
  .solar-bulb-container
    align-items center
    display flex
    flex-direction column
    position absolute
    right 30px
