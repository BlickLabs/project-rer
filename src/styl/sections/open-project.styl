.open-project-container
  margin-top 94px
  position relative
  margin-bottom 108px

.open-project-square
  background-color #f2f2f2
  height 490px
  left 0px
  position absolute
  right 0px
  top 0px

.open-project-image-container
  background url('../img/utils/project.png')
  background-position center
  background-repeat no-repeat
  background-size cover
  height 661px
  width 85%
  position relative

.open-project-info
  background-color rgba(0, 104, 179, .83)
