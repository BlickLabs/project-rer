.projects-container
  padding 200px 0px 127px 0px
  
.projects-text-content
  align-items center
  display flex
  flex-direction column

.projects-title
  color #132c3e
  font-size remify(35px)
  margin 0px
  
.projects-description
  color #132c3e
  font-size remify(15px)
  line-height 25px
  margin 36px 0px 109px 0px
  text-align center
  width 60%
  
.project-image-container
  display flex
  flex-wrap wrap
  
.project-image-content
  position relative
  width 50%
  
  &.slick-slide
  
  &:hover
    .project-hover
      opacity 1
  
.project-hover
  align-items center
  background-color rgba(59, 122, 173, .83)
  bottom 0px
  cursor pointer
  display flex
  flex-direction column
  justify-content center
  left 0px
  opacity 0
  position absolute
  right 0px
  transition 300ms opacity ease
  top 0px
  
.project-hover-title
  color #fff
  font-size remify(23px)
  margin 0px
  text-transform uppercase
  
.project-hover-description
  color #fff
  font-size remify(19px)
  margin 11px 0px 0px 0px

.project-image
  height auto
  width 100%