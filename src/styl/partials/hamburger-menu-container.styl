.hamburger-menu-container
	display none

@media screen and (max-width 780px)
  .hamburger-menu-container
    background-color #235ba8
    display block
    left 0
    padding-bottom 50px
    position absolute
    top 0
    width 85%
    z-index 13
    
  .hamburger-menu-header
    align-items center
    display flex
    flex-direction row
    justify-content space-between
    padding 22px 36px 50px 36px
    
  .hamburger-logo
    height 33px
    width 102px
    
  .hamburger-close-container
    cursor pointer
    
  .hamburger-close
    height 16px
    width 16px
    
  .hamburger-link-container
    align-items center
    display flex
    flex-direction row
    margin-bottom 40px
    
  .hamburger-stroke-container
    height 1px
    width 23px
    margin-right 15px
    transition .3s height ease

  .hamburger-stroke
    height 1px
    width 50%
    background-color #235ba8
    transition 300ms width, color ease

  .hamburger-menu-link
    color #fff
    cursor pointer
    font-size remify(12)
    letter-spacing 1.4px
    text-transform uppercase

    &.link-active
      font-family 'OpenSans'
      font-weight 800
      
    &:hover, &.link-active
      .hamburger-stroke
        width 100%
        background-color #fff